<div class="dri_collection_institutes_item">
    <%= @inst.name %>
    <%= @inst.url %>

   <%if @inst.brand.nil? && @inst.url.blank? %>
     <%= @inst.name %>
   <% elsif @inst.brand.nil? && !@inst.url.blank? %>
     <%= link_to @inst.name, @inst.url, :target => "_blank" %>
   <% elsif @inst.brand && @inst.url.blank? %>
     <%= image_tag logo_url(@inst), :height => "75px" %>
   <% else %>
     <%= link_to image_tag(logo_url(@inst), :height => "75px"), @inst.url, :target => "_blank" %>
   <% end %>
</div>
