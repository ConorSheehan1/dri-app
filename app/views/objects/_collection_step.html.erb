<h2>Select Collection</h2>

<%= form_tag :action=>"create", :method=>"post" do %>
  <%= select_tag "collection_id",  options_for_select(get_collections{ |c| [c.title, c.pid] }), :prompt => "Select collection" %>
  <%= submit_tag "Continue", :class => "btn-primary btn-large", :id => "continue" %>

<% end %>

