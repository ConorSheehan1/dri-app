<fieldset>
  <legend><%= t('dri.views.objects.legends.replace_metadata') %></legend>
  <p class="legend-caption"><%= t('dri.views.objects.legends.replace_caption') %></p>
  <%= form_tag(url_for(:action=>"update", :controller=>"metadata", :id=>@object.id), :multipart => true, :method => :put, :id => "metadata_uploader") do %>
    <%= hidden_field_tag 'authenticity_token', form_authenticity_token %>
    <%= file_field_tag 'metadata_file', :accept => "application/xml", :required => "true" %>
    <%= button_tag t('dri.views.objects.buttons.replace_metadata'), :id => "replace_metadata", :name => "upload_metadata", :class => "btn-primary" %>
  <% end %>
</fieldset>
