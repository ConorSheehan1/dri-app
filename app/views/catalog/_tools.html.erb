<div class="dri_bookmark_object">
  <%= render_show_doc_actions %>
</div>
<!-- close dri_bookmark_object -->

<div class="dri_objecttools_title">
  <%= t('dri.views.catalog.titles.object_tools') %>
</div>
<!-- close vc_title -->

<ul class="dri_view_collection">
  <li><a href="<%= url_for :controller => 'metadata', :action => 'show', :id => @document.id %>" id="download_metadata"><%= t('dri.views.catalog.forms.metadata') %></a></li>
  <li><%= link_to t('blacklight.tools.endnote'), object_path(@document, :format => 'endnote') %></li>
  <li><%= link_to t('blacklight.tools.cite'), citation_object_path(@document), :'data-toggle' => 'modal',  :'data-target' => '#dri_citatation_modal_id' %></li>

</ul>


<div class="modal fade" id="dri_citatation_modal_id">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= t('blacklight.tools.cite') %></h4>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('dri.window.modal.close') %></button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->