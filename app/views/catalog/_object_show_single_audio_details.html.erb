<dl class="dri_object_metadata_readview">
  <% if(!generic_file[:mime_type].empty? || !generic_file[:format_label].empty?) %>
      <dt><%= t("dri.views.catalog.forms.audio.format") %></dt>
      <dd>
        <% if(generic_file[:format_label].empty?) %>
            <%= generic_file[:mime_type] %>
        <% else %>
            <%= generic_file[:format_label].first %>
        <% end %>
      </dd>
  <% end %>

  <% unless(generic_file[:last_modified].empty?) %>
      <dt><%= t("dri.views.catalog.forms.audio.last_modified") %></dt>
      <dd>
        <%= generic_file[:last_modified].first %>
      </dd>
  <% end %>

  <% unless(generic_file[:file_size].empty?) %>
      <dt><%= t("dri.views.catalog.forms.audio.file_size") %></dt>
      <dd>
        <% file_size = generic_file[:file_size].first.to_f %>
        <% converted_file_size = convert_file_size(file_size) %>
        <%= "#{converted_file_size[:size]} #{converted_file_size[:unit]}"%>
      </dd>
  <% end %>
</dl>