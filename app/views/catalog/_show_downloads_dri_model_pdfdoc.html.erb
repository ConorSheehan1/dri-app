<%= get_datastreams document %>
<h3>Files</h3>
<dl class="dl-horizontal  dl-invert">
  <dt>Metadata: </dt>
  <dd><a href="<%= url_for :controller => 'metadata', :action => 'show', :id => document.id %>">view</a></dd>
  <dt>PDF: </dt>
  <% if @datastreams.has_key?('masterContent') %>
    <dd>
      <object data="<%= url_for(:controller => 'files', :action => 'show', :id => @document.id) %>" type="application/pdf" width="100%" height="600">
        alt :<%= link_to "download", url_for(:controller => 'files', :action => 'show', :id => @document.id) %>
      </object>
    </dd>
  <% else %>
    <dd>No file has been uploaded.</dd>
  <% end %>
</dl>
