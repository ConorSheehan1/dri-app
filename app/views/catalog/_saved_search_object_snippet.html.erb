<% if mode == "collections" %>

      <div class="dri_content_block_collection">
        <div>
          <div class="dri_collection_image">
            <% image = cover_image ( document ) %>
            <% unless image.nil? %>
                <%= image_tag image, :width=>"228" %>
            <% else %>
                <%= image_tag "no_image.png", :width=>"228" %>
            <% end %>
          </div>
          <!-- close image -->
          <h1><%= document[:title_tesim][0] %></h1>
          <p class="dri_publishing_institute">
            <% unless document[:institute_tesim].nil? %>
                <%= document[:institute_tesim][0] %>
            <% end %>
          </p>
        </div>
        <div class="dri_num_objects">
          <span class="dri_object_text_num">
            <%= t('dri.views.catalog.forms.objects_in_collection') + " (" + count_items_in_collection(document[:id]).to_s + ")" %>
          </span>
        </div>
      </div>

<% else %>

      <div class="dri_content_block">
        <% get_cover_image document %>
        <h1><%= document[:title_tesim][0] %></h1>
        <div class="dri_image">

          <%= image_tag @cover_image, :width=>"200" %>
        </div><!-- close image -->
        <p class="dri_subject">
          <% if document[:subject_tesim] %>
              <% document[:subject_tesim].each do |subject| %>
                  <%= subject %> <% if !document[:subject_tesim].last %> , <% end %>
              <% end %>
          <% else %>
              n/a
          <% end %>
        </p>
        <div class="dri_icon">
          <% unless format?(document).eql?("unknown") %>
              <span class="dri_icon_image"><%= image_tag(icon_path(document)) %> &nbsp; <%= get_document_type document %></span>
          <% else %>
              <span class="dri_icon_text"><%= document[:object_type_ssm].first %></span>
          <% end %>
        </div>
      </div>

<% end %>
