<% if collection?(document) %>
<article class="block5">
  <div class="dri_content_block_collection">
    <div class="dri_image">
      <% image = cover_image ( document ) %>
      <% unless image.nil? %>
        <%= image_tag image, :width=>"228", :height=>"127" %>
      <% else %>
	  <%= image_tag "no_image.png", :width=>"228", :height=>"127" %>
      <% end %>
    </div> <!-- close image -->

    <h1><%= link_to_document document, :label => document_show_link_field, :counter => (document_counter + 1 + @response.params[:start].to_i) %></h1>	
    <p class="dri_publishing_institute">
      <a ><% document[:rights_tesim].each do |rights| %>
        <%= rights %>
      <% end %></a>
    </p>

    <div class="dri_num_objects">
      <span class="dri_object_text">Objects</span> <span class="dri_object_text_num"><a href="#"><%= count_items_in_collection(document[:id]) %></a></span>
   </div>
   <!-- close dri_num_objects -->
  </div>
  <!-- close content_block -->
</article>
									
<% else %>

<article class="block5">
  <div class="dri_content_block">
    <%= render :partial => 'document_header', :locals => { :document => document, :document_counter => document_counter } %>	
    <p class="dri_subject">
      <a>
        <% if document[:subject_tesim] %>
          <% document[:subject_tesim].each do |subject| %>
            <%= subject %> <% if !document[:subject_tesim].last %> , <% end %>
      	  <% end %>
        <% else %>
    	  n/a
        <% end %>
      </a>
    </p>

    <div class="dri_icon">
      <% unless format?(document).eql?("unknown") %>
        <span class="dri_icon_image"><%= image_tag(icon_path(document)) %></span>
      <% else %>
        <span class="dri_icon_text"><%= document[:object_type_ssm].first %></span>
      <% end %>
    </div>
    <!-- close dri_icon -->
  </div>
<!-- close content_block -->
</article>

<% end %>
