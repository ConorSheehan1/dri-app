<% if show_sort_and_per_page? and !blacklight_config.sort_fields.blank? %>

	<div id="sort-dropdown" class="dri_main_nav_container">
	  <nav class="dri_main_nav">
		<div id="sort-trigger" class="dri_sort_container">
		    <ul class="dri_sort">
		      <li>
		        <%= link_to(t('blacklight.search.sort.label', :field => current_sort_field.label), params[:field]) do %>
		          <%= t('blacklight.search.sort.label', :field => current_sort_field.label) %>
		        	<span class="dri_dd_menu_arrow"></span>
		        <% end %>
		        <ul>
		          <%- blacklight_config.sort_fields.each do |sort_key, field| %>
                <li><%= link_to(field.label, url_for(params_for_search.merge(:sort => sort_key))) %></li>
		          <%- end -%>
		        </ul>
		      </li>
		    </ul>
	    </div>
	  </nav>
	</div>

<% end %>
