

<% if @previous_document || @next_document %>

<nav class="dri_document_pagination_nav">
		<ul id="dri_pagination_nav_links_id" class="dri_pagination_nav_links">
		<%if @previous_document %>
		        <li class="previous"><%= link_to_previous_document @previous_document %></li>
		<% end %>
		        <li class="selected"> <%= item_page_entry_info %> &nbsp;</li>
		<%if @next_document %>
				<li class="next"><%= link_to_next_document @next_document %></li>
		<% end %>
		</ul>
</nav>
<% end %>
