<h2><%= t('dri.views.ingest.steps.upload') %></h2>

<fieldset>
        <legend><%= t('dri.views.ingest.legends.upload_legend') %></legend>
        <p class="legend-caption"><%= t('dri.views.ingest.legends.upload_caption') %></p>
        <form id="metadata_uploader" action="<%= url_for(:action=>"create", :controller=>"objects") %>" enctype="multipart/form-data" method="post" accept-charset="utf-8">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
        <input type="file" name="metadata_file" accept="application/xml" required >
        <input type="hidden" name="batch[object_type]" value="<%=@type%>">
        <input type="hidden" name="batch[governing_collection]" value="<%=@collection%>">

        <input type="hidden" name="batch[read_groups_string]" value="registered" />
        <input type="hidden" name="batch[discover_groups_string]" value="public" />
        <input type="hidden" name="batch[private_metadata]" value="radio_public" />
        <input type="hidden" name="batch[master_file]" value="radio_private" />

        <%= submit_tag t('dri.views.ingest.buttons.continue'), :class => "btn-primary btn-large", :name => "ingest_metadata", :id => "ingest_metadata" %>

        </form>
</fieldset>

