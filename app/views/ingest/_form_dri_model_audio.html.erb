<%= form_for @object, :as => :dri_model, :url => {:controller=>"objects", :action=>"create"}, :method=>"post", :html => {:class => 'form-vertical'} do |f| %>

  <%= hidden_field_tag 'type', @type %>
  <%= hidden_field_tag 'governing_collection', @collection %>

  <%= render :partial => "shared/form_default_permissions", :locals => { :f => f } %>
  <%= render :partial => "shared/form_audio", :locals => { :f => f, :action => "create" } %>

  <%= f.submit t('dri.views.ingest.buttons.continue'), :class => "btn-primary btn-large", :id => "continue" %>

<% end %>

