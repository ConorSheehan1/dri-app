<div id="content" class="span9 show-document">
	<div id="document" class="document">
		<% if (params[:controller] == "collections" ) %>
		<h4><%= t('dri.views.objects.edit.title_collection') %></h4>
		<% else %>
		<h4><%= t('dri.views.objects.edit.title') %></h4>
		<% end %>
		<div class="dri_ingest_form_container">
			<%= form_for @object, as: :batch, :url => {:controller=>"collections", :action=>"update"}, :method=>"put", :html => {:class => 'dri_ingest_form'} do |f| %>

			<%= render :partial => "shared/form_metadata_qualifieddublincore", :locals => { :f => f, :action => "update" } %>
			<%= render :partial => "shared/access_controls", :locals => {:f => f,:record => @object } %>

			<%= f.submit t('dri.views.objects.buttons.save'), :class => "btn-primary btn-large", :id => "edit_collection" %>
			<% end %>
		</div>
	</div>
</div>
