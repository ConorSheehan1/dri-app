


<% @collections.each do |collection| %>
<article class="block5">
<div class="dri_content_block">
<h1><%= link_to collection[:title], collection_path(:id => collection[:id]) %>
  </h1>
  <div class="dri_image">
   		<%= image_tag(collection[:cover_image], :width=>"200", :height=>"113") %>
  </div>




<h2 class-"dri_editor"=""><!-- Rights? -->
	   Rights<% collection[:rights] %>
</h2>

<h2 class="dri_editor"><!-- Subjects -->

</h2>
<div class="dri_icon">
<span class="dri_icon_image">
<%= image_tag("/assets/views_icon.png", :width=>"21", :height=>"12") %> <%= t('dri.views.collection.index.items', :count => @collection_counts[collection[:id]]) %>
</span>
</div>
<!-- close dri_icon -->

</div><!-- close content_block -->
</article>

<% end %>

     <% if @collections.blank? %>
       <p><%= t('dri.views.collection.index.no_collections.public') %></p>
       <% end %>


       <% if signed_in? %>
       <div class="dri_grey_button dri_clearfix">
					<%= link_to t('dri.views.collection.buttons.new_collection'), new_collection_path, :class => "btn-primary btn-large", :id => "new_collection" %>
		</div>

       <% end %>

