<div class="dri_institutes_title">
	<span><%= t('dri.views.collection.institute.associate_depositing') %></span>
</div>
<% if @collection_institutes %>
	<%= form_tag new_depositing_association_path, :id => 'associate_depositing_institute', :name => 'associate_depositing_institute', :remote => true do %>
		<%= hidden_field_tag 'object', @object.id %>
		<% if  @depositing_institute %>
			<select name="institute_name" id="select_depositing_institute">
			<% @collection_institutes.each do |inst| %>
				<% if  @depositing_institute.name == inst.name %>
				<option selected="selected" value="<%= inst.name %>"><%= inst.name %></option>
				<% else %>
				<option value="<%= inst.name %>"><%= inst.name %></option>
				<% end %>
			<% end %>
			</select>
		<% else %>
			<select name="institute_name" id="select_depositing_institute">
			<% @collection_institutes.each do |inst| %>
				<option value="<%= inst.name %>"><%= inst.name %></option>
			<% end %>
			</select>
		<% end %>
		<%= submit_tag t('dri.views.collection.institute.set_depositor'), :id => "associate_depositing_inst", :class => 'dri_button_green' %>
	<% end %>
<% end %>