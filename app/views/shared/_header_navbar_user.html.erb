  <nav id="dri_account_nav_id" class="dri_account_nav">
    <ul id="dri_account_links_id" class="dri_account_links">
      <% if current_user %>
          <%= link_to user_group.user_path(current_user), :id => 'view_account' do %>
              <li class="on">
                <i class="fa fa-user"></i>&nbsp;<%= current_user[:first_name].to_s %>
              </li>
          <% end %>
      <% end %>
      <% if !current_user %>
      <%= link_to user_group.new_user_path, :id => 'sign_up' do %>
          <li>
            Sign Up
          </li>
          <% end %>
      <% end %>
      <%= link_to main_app.page_path('about_faq'), :id => "dri_header_help", :class => "muted" do %>
      <li>
        <%= t('dri.headerlinks.help') %>
      </li>
      <% end %>

        <% if current_user %>
            <%= link_to user_group.destroy_user_session_path, :method => :delete, :id => 'logout' do %>
            <li class="no_border">
            	<%= t('blacklight.header_links.logout') %>
            </li>
            <% end %>
        <% else %>
            <%= link_to user_group.new_user_session_path, :id => 'login' do %>
                        <li class="no_border">
                        	<%= t('blacklight.header_links.login') %>
            </li>
            <% end %>
        <% end %>


      <%= render :partial => 'shared/header_mobile_lang' %>
    </ul>
  </nav>
  <!-- close dri_account_nav -->
