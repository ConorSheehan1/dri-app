
<script>
function fileUploadHelper(thisObj) {
    $("#institution_logo").html(($(thisObj).val()).replace("C:\\fakepath\\", ""));
}
</script>

<div class="dri_institutes_title" id="accordion">

    <div class="dri_add_institute_link">
              <a title="<%= t('dri.views.collection.institute.add') %>" data-toggle="collapse" data-parent="#accordion" href="#dri_add_institutes_block" ><i class="fa fa-plus">&nbsp;</i><%= t('dri.views.collection.institute.add') %></a></p>

    </div>
    <div id="dri_add_institutes_block" class="collapse">
    <div class="dri_file_upload">
                <%= form_for(@inst, remote: true) do |f| %>
                    <div>
                        <a class='btn btn-default' href='javascript:;'>
                        <h5 class="dri_upload_file_text"><i class="fa fa-upload">&nbsp;</i><%= "#{t('dri.views.collection.institute.form.logo')}"%></h5>
                        <p>(recommended height 75px)</p>
                        <%= f.file_field :logo, :required=>'required', :accept=>'image/png,image/jpeg', :onchange=>'fileUploadHelper($(this));' %>
                        <h5 id="institution_logo">No File</h5>
                        </a>
                    </div>
                    <%= hidden_field_tag 'object', @object.id %>
                    <label> <%= t('dri.views.collection.institute.form.name') %></label>
                    <%= f.text_field :name, :required=>'required' %>
                    <label><%= t('dri.views.collection.institute.form.url') %></label>
                    <%= f.url_field :url, :required=>'required'  %>

                

                    <%= f.submit t('dri.views.collection.institute.add'), :id => 'add_institute', :class=>'btn dri_grey_button' %>
                <% end %>
    </div>


</div>
</div>
