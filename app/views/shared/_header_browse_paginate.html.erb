<% if has_browse_params? || (params[:controller] == 'saved_searches' && params[:action] == 'index')%>
    <%= render 'shared/results_paginator' %>
    
  
<% end %>

<% if params[:controller] == 'saved_searches' && params[:action] == 'index' %>
<div class="dri_facet_restrictions_links ">
    <div class="dri_clear_all_saved">
        <span class="dri_clear_all"> <%= link_to t('dri.views.catalog.buttons.clear_all_saved_searches'), clear_saved_searches_path, :id => 'clear_saved_search' , :method => :delete, :data => { :confirm => "#{t('dri.views.catalog.buttons.clear_all_saved_searches')}?" } %> </span>
    </div>
</div>
<% end %>

<% if @previous_document || @next_document %>

    <!-- navigation to allow the user to page through the search results  -->
    <nav id="dri_pagination_nav_id" class="dri_pagination_nav">
      <ul
      class="dri_pagination_nav_links" >

        <%if @previous_document %>
            <li class="previous">
              <%= link_to_previous_document @previous_document %>
            </li>
        <% end %>
        <li class="selected">
          &nbsp; <%= item_page_entry_info %> &nbsp;
        </li>
        <%if @next_document %>
            <li class="next">
              <%= link_to_next_document @next_document %>
            </li>
        <% end %>
      </ul>
    </nav>
<% end %>