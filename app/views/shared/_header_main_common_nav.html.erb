<% if root? %>
    <li class="active">
<% else %>
    <li>
<% end %>
<%= link_to t('dri.headerlinks.home'), main_app.root_path, id: 'dri_home_id' %>
</li>

<% if ((controller_name == 'catalog') && (controller.action_name != 'index')  || (request.path.include? "/catalog") ) %>
    <li class="active">
<% else %>
    <li>
<% end %>

<%= link_to t('dri.headerlinks.browse'), main_app.catalog_index_path(mode: 'collections', search_field: 'all_fields'), id: 'browse' %>
</li>

<% if (controller.controller_name == 'institutes' && controller.action_name == 'index') %>
    <li class="active">
<% else %>
    <li>
<% end %>
<%= link_to t('dri.headerlinks.institutions'), organisations_path, id: 'institutions' %>
</li>

