<!-- Overridden _header_navbar.html.erb file. This file overrides
     the file of the same name provided with blacklight. Placing a copy
     here allows us to specify our own custom header instead of the
     default blacklight one.
-->

<div id="header-navbar-fixed-top" class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <div class="row">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="span2">
          <%= link_to application_name, root_path, :class => "brand" %>
        </div>

        <div class="span6 clearfix" id="searchbar">         
          <%= render_search_bar  %>
        </div>

        <div class="span4 pull-right">
         <%= render :partial=>'/user_util_links' %>
        </div>

      </div>

      <div class="row">
           <ul class="nav pull-left">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Ingest", new_audio_path, :id => "ingest" %></li>
            <li><%= link_to "About", "#" %></li>
            <li><%= link_to "Contact", "#" %></li>
          </ul>
        </div>
      </div>

    </div>
  </div>
</div>

