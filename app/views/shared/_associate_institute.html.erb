<%= form_tag new_association_path(:format => :js), :id => 'associate_institute', :name => 'associate_institute', :remote => true do %>
<%= hidden_field_tag 'object', @object.id %>
<select name="institute_name" id="institute">
<% @institutes.each do |inst| %>
<option value="<%= inst.name %>"><%= inst.name %>
<% end %>
</select>
<%= submit_tag t('dri.views.collection.institute.associate') %>
<% end %>
