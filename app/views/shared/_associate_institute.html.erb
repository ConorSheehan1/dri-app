<div class="dri_institutes_title dri_clearfix">
<%= t('dri.views.collection.institute.associate') %>
</div>
<%= form_tag new_association_path, :id => 'associate_institute', :name => 'associate_institute', :remote => true do %>
    <%= hidden_field_tag 'object', @object.id %>
    <div class="dri_select_institution">
    <select name="institute_name" id="select_institute">
      <% if @institutes %>
          <% @institutes.each do |inst| %>
              <option value="<%= inst.name %>"><%= inst.name %></option>
          <% end %>
      <% end %>
    </select>
    </div>
    <%= submit_tag t('dri.views.collection.institute.associate'), :id => "associate_inst", :class => 'btn dri_grey_button' %>
<% end %>
