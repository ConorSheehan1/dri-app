
<% if @available_institutes.count > 0 %>
<div class="dri_institutes_title dri_clearfix">
	<%= t('dri.views.collection.institute.associate') %>
</div>

<%= form_tag new_association_path, :id => 'associate_institute', :name => 'associate_institute' do %>
<%= hidden_field_tag 'object', @document.id %>
<div class="dri_select_institution">
	<select name="institute_name" id="select_institute" class="w240">
		<% if @available_institutes %>
		<% @available_institutes.each do |inst| %>
		<option value="<%= inst %>"><%= inst %></option>

		<% end %>
	</select>
</div>
<%= submit_tag t('dri.views.collection.institute.associate'), :id => "associate_inst", :class => 'dri_button_green w240' %>
<% end %>
<% end %>
<% end %>


<% if @removal_institutes.count > 0 %>
<div class="dri_institutes_title dri_clearfix">
	<%= t('dri.views.collection.institute.remove') %>
</div>
<%= form_tag disassociation_path, :id => 'disassociate_institute', :name => 'disassociate_institute' do %>
<%= hidden_field_tag 'object', @document.id %>
<div class="dri_select_institution">
	<select name="institute_name" id="select_institute" class="w240">

		<% @removal_institutes.each do |inst| %>
		<option value="<%= inst %>"><%= inst %></option>

		<% end %>
	</select>
</div>
<%= submit_tag t('dri.views.collection.institute.remove'), :id => "associate_inst", :class => 'dri_button_green w240' %>
<% end %>
<% end %>

<% if @collection_institutes && @collection_institutes.count > 1 %>
<div class="dri_institutes_title">
	<span><%= t('dri.views.collection.institute.associate_depositing') %></span>
</div>

<%= form_tag new_depositing_association_path, :id => 'associate_depositing_institute', :name => 'associate_depositing_institute' do %>
<%= hidden_field_tag 'object', @document.id %>
<% if  @depositing_institute %>
<div class="dri_select_institution">
<select name="institute_name" id="select_depositing_institute" class="w240">
	<% @collection_institutes.each do |inst| %>
	<% if  @depositing_institute.name == inst.name %>
	<option selected="selected" value="<%= inst.name %>"><%= inst.name %></option>
	<% else %>
	<option value="<%= inst.name %>"><%= inst.name %></option>
	<% end %>
	<% end %>
</select>
</div>
<% else %>
<div class="dri_select_institution">
<select name="institute_name" id="select_depositing_institute" class="w240">
	<% @collection_institutes.each do |inst| %>
	<option value="<%= inst.name %>"><%= inst.name %></option>
	<% end %>
</select>
</div>
<% end %>
<%= submit_tag t('dri.views.collection.institute.set_depositor'), :id => "associate_depositing_inst", :class => 'dri_button_green w240' %>
<% end %>
<% end %>
