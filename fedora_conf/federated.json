{
    "name" : "repo",
    "jndiName" : "",
    "workspaces" : {
        "predefined" : [],
        "default" : "default",
        "allowCreation" : true
    },
    "storage" : {
        "binaryStorage" : {
            "type" : "file",
            "minimumBinarySizeInBytes" : 1024,
            "directory":"${fcrepo.binary.directory:target/binaries}"
        }
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        },
        "providers" : [
            { "classname" : "org.fcrepo.auth.common.BypassSecurityServletAuthenticationProvider" }
        ]
    },
    "node-types" : ["fedora-node-types.cnd"],
    "externalSources" : {
        "federated-directory" : {
            "classname" : "org.fcrepo.connector.file.FedoraFileSystemConnector",
            "directoryPath" : "../dri_files/data",
            "propertiesDirectoryPath" : "../dri_files/meta",
            "projections" : [ "default:/federated => /" ],
            "contentBasedSha1" : "true",
            "readonly" : false,
            "extraPropertiesStorage" : "json",
            "cacheTtlSeconds" : 5
        }
    } 
}
